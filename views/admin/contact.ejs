<body style="background: linear-gradient(to right, #0f2027, #203a43, #2c5364)">
    <%- include('../partials/header') %>
        <div class="container py-5 mt-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-sm p-2 text-light" style="background-color: rgb(15, 36, 46) !important;">
                        <h2 class="fw-bold text-center">Contact Us</h2>
                        <p class="text-white text-center">We'd love to hear from you. Send us a message!</p>
                        <form action="/admin/contact" method="POST" class="p-3 form">
                            <div class="mb-3">
                                <label for="name" class="form-label fw-semibold">Your Name</label>
                                <input type="text" class="form-control" placeholder="Enter Your Name..." id="name"
                                    name="name" required>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label fw-semibold">Email Address</label>
                                <input type="email" class="form-control" placeholder="Enter Your Email..." id="email"
                                    name="email" required>
                            </div>

                            <div class="mb-3">
                                <label for="subject" class="form-label fw-semibold">Subject</label>
                                <input type="text" class="form-control" placeholder="Enter Your Subject..." id="subject"
                                    name="subject" required>
                            </div>

                            <div class="mb-3">
                                <label for="message" class="form-label fw-semibold">Message</label>
                                <textarea class="form-control" id="message" placeholder="Enter Your Message..."
                                    name="message" rows="5" required></textarea>
                            </div>

                            <hr class="my-4 mt-4">
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary px-4 w-100">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

