<style>
    .form button {
        background: rgba(255, 255, 255, 0.8);
        color: black;
        font-weight: bold;
    }

    .form button:hover {
        background: white;
        color: rgb(0, 0, 0) !important;
    }

    .hover-up:hover {
        transform: translateY(-5px);
        color: #ffc107;
        transition: 0.3s ease;
